@model List<Mist452FinalProject.Models.Game>

@{
    ViewData["Title"] = "Game List";
}

<h1 class="text-center">Game List</h1>

<div class="container mt-3 mb-3">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Game Date</th>
                <th>Opponent</th>
                <th>Score</th>
                <th>Possession</th>
                <th>Shots</th>
                <th>Saves</th>
                <th>Fouls</th>
                <th>Actions</th>
                <th>Film</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in Model)
            {
                <tr>
                    <td>@game.gameDate</td>
                    <td>@game.opponent</td>
                    <td>@game.score</td>
                    <td>@game.posessionStat</td>
                    <td>@game.shotsStat</td>
                    <td>@game.SavesStat</td>
                    <td>@game.foulsStat</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@game.GameID" class="btn btn-info">Edit</a>
                        <a asp-action="Delete" asp-route-id="@game.GameID" class="btn btn-danger">Delete</a>
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(game.filmURL))
                        {
                            <a href="@game.filmURL" target="_blank" class="btn btn-secondary">Watch Film</a>
                        }
                        else
                        {
                            <text>No Film Available</text>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-center">
        <a asp-action="Create" class="btn btn-primary">Enter New Game</a>
    </div>
</div>
