@model Mist452FinalProject.Models.HealthSurvey

@{
    ViewData["Title"] = "Delete Health Survey";
}

<h1>@ViewData["Title"]</h1>

<div class="container mt-4">
    <h3>Are you sure you want to delete this health survey?</h3>
    <dl class="row">
        <dt class="col-sm-3">Participant Name</dt>
        <dd class="col-sm-9">@Model.ParticipantName</dd>
        <dt class="col-sm-3">Weight</dt>
        <dd class="col-sm-9">@Model.Weight lbs</dd>
        <dt class="col-sm-3">Height</dt>
        <dd class="col-sm-9">@Model.HeightFeet ft @Model.HeightInches inches</dd>
        <dt class="col-sm-3">Age</dt>
        <dd class="col-sm-9">@Model.Age</dd>
        <dt class="col-sm-3">Appointment Date</dt>
        <dd class="col-sm-9">@Model.AppointmentDate.ToShortDateString()</dd>
        <dt class="col-sm-3">Reason for Check-Up</dt>
        <dd class="col-sm-9">@Model.ReasonForCheckUp</dd>
        <dt class="col-sm-3">Smoking Status</dt>
        <dd class="col-sm-9">@Model.IsSmoker ? "Yes" : "No"</dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="HSurveyId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
