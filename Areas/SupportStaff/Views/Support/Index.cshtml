@{
    ViewData["Title"] = "Support Staff Dashboard";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Navigation</h4>
                </div>
                <div class="list-group list-group-flush">
                    <a href="@Url.Action("Index", "Surveys", new { area = "SupportStaff" })" class="list-group-item list-group-item-action">Info Surveys</a>
                    <a href="@Url.Action("Index", "HealthSurveys", new { area = "SupportStaff" })" class="list-group-item list-group-item-action">Health Surveys</a>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title">Welcome!</h4>
                    <p class="card-text">Welcome to the Support Staff Dashboard. From here, you can manage all survey-related activities, access detailed reports, and perform other administrative tasks.</p>
                </div>
            </div>
        </div>
    </div>
</div>
