@model Mist452FinalProject.Models.Survey

@{
    ViewData["Title"] = "Take Survey";
}

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group">
                    <label asp-for="ParticipantName" class="control-label">Participant Name</label>
                    <input asp-for="ParticipantName" class="form-control" placeholder="Enter participant name" />
                    <span asp-validation-for="ParticipantName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="Enter email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Age" class="control-label">Age</label>
                    <input asp-for="Age" class="form-control" type="number" placeholder="Enter age" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TeamSatisfaction" class="control-label">Team Satisfaction</label>
                    <select asp-for="TeamSatisfaction" class="form-control" asp-items="Html.GetEnumSelectList<TeamSatisfaction>()">
                        <option value="">Please select one</option>
                    </select>
                    <span asp-validation-for="TeamSatisfaction" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FavoritePlayer" class="control-label">Favorite Player</label>
                    <input asp-for="FavoritePlayer" class="form-control" placeholder="Enter favorite player" />
                    <span asp-validation-for="FavoritePlayer" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LeastFavoritePlayer" class="control-label">Least Favorite Player</label>
                    <input asp-for="LeastFavoritePlayer" class="form-control" placeholder="Enter least favorite player" />
                    <span asp-validation-for="LeastFavoritePlayer" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FavoriteMatch" class="control-label">Favorite Match</label>
                    <input asp-for="FavoriteMatch" class="form-control" placeholder="Enter favorite match" />
                    <span asp-validation-for="FavoriteMatch" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SuggestionsForImprovement" class="control-label">Suggestions for Improvement</label>
                    <textarea asp-for="SuggestionsForImprovement" class="form-control" placeholder="Enter any suggestions for improvement"></textarea>
                    <span asp-validation-for="SuggestionsForImprovement" class="text-danger"></span>
                </div>

                <div class="form-group form-check">
                    <input asp-for="IsInterestedInVolunteering" class="form-check-input" />
                    <label asp-for="IsInterestedInVolunteering" class="form-check-label">Interested in Volunteering?</label>
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
