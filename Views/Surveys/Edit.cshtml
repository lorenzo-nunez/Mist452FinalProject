@model Mist452FinalProject.Models.Survey

@{
    ViewData["Title"] = "Edit Survey";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger" role="alert">
            <strong>There were errors saving your survey:</strong>
            <ul>
                @foreach (var value in ViewData.ModelState.Values)
                {
                    @foreach (var error in value.Errors)
                    {
                        <li>@error.ErrorMessage</li>
                    }
                }
            </ul>
        </div>
    }

    <form asp-action="Edit">
        <input type="hidden" asp-for="SurveyId" />
        @* Form fields section *@
        <div class="mb-3">
            <label asp-for="ParticipantName" class="form-label">Participant Name</label>
            <input asp-for="ParticipantName" class="form-control" placeholder="Enter participant's name" />
            <span asp-validation-for="ParticipantName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" type="email" placeholder="Enter email address" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Age" class="form-label">Age</label>
            <input asp-for="Age" class="form-control" type="number" placeholder="Enter age" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TeamSatisfaction" class="form-label">Team Satisfaction</label>
            <select asp-for="TeamSatisfaction" class="form-select" asp-items="Html.GetEnumSelectList<Mist452FinalProject.Models.TeamSatisfaction>()">
                <option value="">Select satisfaction level</option>
            </select>
            <span asp-validation-for="TeamSatisfaction" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="FavoritePlayer" class="form-label">Favorite Player</label>
            <input asp-for="FavoritePlayer" class="form-control" placeholder="Enter favorite player's name" />
            <span asp-validation-for="FavoritePlayer" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LeastFavoritePlayer" class="form-label">Least Favorite Player</label>
            <input asp-for="LeastFavoritePlayer" class="form-control" placeholder="Enter least favorite player's name" />
            <span asp-validation-for="LeastFavoritePlayer" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="FavoriteMatch" class="form-label">Favorite Match</label>
            <input asp-for="FavoriteMatch" class="form-control" placeholder="Describe your favorite match" />
            <span asp-validation-for="FavoriteMatch" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SuggestionsForImprovement" class="form-label">Suggestions for Improvement</label>
            <textarea asp-for="SuggestionsForImprovement" class="form-control" placeholder="Any suggestions for improvement?"></textarea>
            <span asp-validation-for="SuggestionsForImprovement" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="IsInterestedInVolunteering" class="form-check-input" />
            <label asp-for="IsInterestedInVolunteering" class="form-check-label">Interested in volunteering?</label>
            <span asp-validation-for="IsInterestedInVolunteering" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
