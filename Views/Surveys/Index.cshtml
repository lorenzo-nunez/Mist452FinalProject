@model IEnumerable<Mist452FinalProject.Models.Survey>

@{
    ViewData["Title"] = "Survey List";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    <div class="text-right mb-3">
        <a asp-action="Create" class="btn btn-primary">Take Survey</a>
    </div>

    <div class="row">
        @foreach (var survey in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@survey.ParticipantName</h5>
                        <p class="card-text">@survey.Email</p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" asp-route-id="@survey.SurveyId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@survey.SurveyId" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@survey.SurveyId" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
